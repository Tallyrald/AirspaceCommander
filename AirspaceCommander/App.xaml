<Application x:Class="Airspace_Commander.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Airspace_Commander"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="WinBgColor" Color="Black" />
        <SolidColorBrush x:Key="WinBorderColor" Color="White" />
        <Thickness x:Key="WinBorderSize" Top="4" Bottom="4" Left="2" Right="2" />
        <SolidColorBrush x:Key="RocketBg" Color="White" />
        <SolidColorBrush x:Key="RocketLine" Color="White" />
        <SolidColorBrush x:Key="BuildingBg" Color="Orange" />
        <SolidColorBrush x:Key="BuildingLine" Color="Orange" />
    </Application.Resources>
</Application>
